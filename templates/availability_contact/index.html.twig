{% extends 'base.html.twig' %}

{% block title %}AvailabilityContact index{% endblock %}

{% block body %}
    <h1>AvailabilityContact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Day</th>
                <th>HourStart</th>
                <th>HourEnd</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for availability_contact in availability_contacts %}
            <tr>
                <td>{{ availability_contact.id }}</td>
                <td>{{ availability_contact.day }}</td>
                <td>{{ availability_contact.hourStart }}</td>
                <td>{{ availability_contact.hourEnd }}</td>
                <td>
                    <a href="{{ path('app_availability_contact_show', {'id': availability_contact.id}) }}">show</a>
                    <a href="{{ path('app_availability_contact_edit', {'id': availability_contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_availability_contact_new') }}">Create new</a>
{% endblock %}
