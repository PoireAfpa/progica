{% block title %}Regions{% endblock %}

{% block body %}
    <h1>Regions</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ region.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ region.code }}</td>
            </tr>
            <tr>
