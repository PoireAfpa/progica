{% extends 'base.html.twig' %}

{% block title %}Regions index{% endblock %}

{% block body %}
    <h1>Regions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for region in regions %}
            <tr>
                <td>{{ region.id }}</td>
                <td>{{ region.code }}</td>
                <td>{{ region.name }}</td>
                <td>{{ region.slug }}</td>
                <td>
                    <a href="{{ path('app_regions_show', {'code': region.code}) }}">show</a>
                    <a href="{{ path('app_regions_edit', {'code': region.code}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_regions_new') }}">Create new</a>
{% endblock %}
