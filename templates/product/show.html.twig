{% extends 'base.html.twig' %}

{% block body %}
    <main id="main">
        {# Intro Single #}
        {{ include('product/partials/_intro_single.html.twig') }}

        <section class="d-flex justify-content-center">
            <article class="row">
                {# Product details #}
                <h3 class="card-title">{{ product.title }}</h3>
                <div class="card m-4" style="width: 18rem;">
                    <img src="{{ product.image }}" class="card-img-top" alt="..." style="width:100%; height:300px;">
                    <div class="card-body">
                    <p class="card-text">{{ product.people}} personnes</p>
                    <p class="card-text">{{ product.surface }} m²</p>
                    <p class="card-text">{{ product.room }} chambres</p>
                    <p class="card-text">{{ product.description }}</p>
                    <p class="card-text">Prix haute saison : {{ product.peakSeasonPrice }} euros par semaine</p>
                    <p class="card-text">Prix basse saison : {{ product.offSeasonPrice }} euros par semaine</p>
                        {% if product.smoker == true %}
                        <i class="fa-solid fa-smoking"></i>
                        {% else %}
                        <i class="fa-solid fa-ban-smoking"></i>
                        {% endif %}
                        {% if product.animal == true %}
                            <p class="card-text">Supplément animaux : {{ product.animalCost }} euros/semaine</td>
                        {% endif %}
                    </div>
                </div>
                <a href="{{ path('app_product_index') }}" class="btn btn-secondary">Retour</a>
            </article>
        </section>

    </main>
{% endblock %}
