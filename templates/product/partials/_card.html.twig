<div class="card m-4" style="width: 24rem;">
    <img src="{{ product.image }}" class="card-img-top" alt="..." style="width:100%; height:300px;">
        <div class="card-body d-flex flex-column">
            <h3 class="card-title">{{ product.title }}</h3>
            <div class="card-text">{{ product.people}} personnes</div>
            <div class="card-text">Surface : {{ product.surface }} m²</div>
            <p class="card-text">{{ product.description }}</p>
        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-success mt-auto btn btn-lg btn-block">Découvrir le gîte</a>
        </div>
</div>