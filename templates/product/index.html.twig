{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>PeakSeasonPrice</th>
                <th>OffSeasonPrice</th>
                <th>Surface</th>
                <th>Room</th>
                <th>People</th>
                <th>Animal</th>
                <th>AnimalCost</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.image }}</td>
                <td>{{ product.peakSeasonPrice }}</td>
                <td>{{ product.offSeasonPrice }}</td>
                <td>{{ product.surface }}</td>
                <td>{{ product.room }}</td>
                <td>{{ product.people }}</td>
                <td>{{ product.animal ? 'Yes' : 'No' }}</td>
                <td>{{ product.animalCost }}</td>
                <td>{{ product.slug }}</td>
                <td>
                    <a href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
                    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_new') }}">Create new</a>
{% endblock %}
